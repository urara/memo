<h1>Listing notes</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>

  <tr>
    <td><%= note.title %></td>
    <td><%= button_to 'Show', note %></td>
    <td><%= button_to 'Edit', edit_note_path(note) %></td>
    <td><%= button_to 'Destroy', note, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Note', new_note_path %>
