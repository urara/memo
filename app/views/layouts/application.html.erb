<!DOCTYPE html>
<html>
<head>
  <title>Memotest</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">MEMO</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><%= link_to 'New Note', new_note_path %></li>
              <li><%= link_to 'Back Home', notes_path %></li>
            </ul>
			<% if user_signed_in? %>
				<ul class="nav pull-right">
					login user's address:<%= link_to current_user.email,edit_user_registration_path %>
				</ul>
			<% end %>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>



<%= yield %>

</body>
</html>
